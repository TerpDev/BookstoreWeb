@model IEnumerable<Bookstore.Models.Category>

@{
    ViewData["Title"] = "Index";
}
@if(TempData["result"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["result"]
    </div>
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-bg-primary">Lijst met categorieeen</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Categorie toevoegen
            </a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td class="text-end d-flex flex-row">
                <div class="w-75 btn-group" role="group">
                    <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil-square"></i>wijzig</a>
                </div>
                <div class="w-75 btn-group" role="group">
                    <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash-fill"></i>Verwijderen</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
