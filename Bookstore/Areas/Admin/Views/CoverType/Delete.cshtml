@model BookStore.Models.CoverType

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

<form method="post" asp-action="DeletePost" asp-route-id="@Model.Id">
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Soort kaft verwijderen</h2>
            <hr />
        </div>
        <div class="mb-3">
            <h4>Weet je zeker dat je deze kaft wilt verwijderen?</h4>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px">Verwijderen</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-primary" style="width: 150px">
            Terug naar overzicht
        </a>
    </div>
</form>
